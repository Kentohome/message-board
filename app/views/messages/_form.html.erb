<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
  <div class="container-fluid">
    <div class="row">
      <div class="form-group">
        <label class="col-md-1 ">名前:</label>
          
        <div class="col-md-11">
        <%= f.text_field :name , :size => "28" , placeholder: '名前を記入してください', class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <label class="col-md-1 ">内容:</label>
        <div class="col-md-11">
        <%= f.text_area :body, :size =>"30x4" , placeholder: '内容を記入してください' , class: "form-control" %>
        </div>
      </div>
      <div class="col-md-offset-1 col-md-11">
      <%= f.submit class: "btn btn-sm btn-primary" %>
      </div>
    </div>
  </div>
<% end %>